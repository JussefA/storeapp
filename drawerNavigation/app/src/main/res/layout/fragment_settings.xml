<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Settings_Fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    tools:context=".SettingsFragment">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="465dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/bgcointainer"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/edtxNameSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxLastNameSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Las Name"
                android:inputType="textPersonName"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxStreetSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Street"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxStateSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="State"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxCountrySett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Country"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxCodeSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Zip Code"
                android:inputType="textPostalAddress"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtxPhoneSett"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColorHint="@color/AzulFuerte"
                android:textSize="20sp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="104dp">

                <Button
                    android:id="@+id/button"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bgbutton"
                    android:text="Save"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bgbutton"
                    android:text="Add Adress"
                    android:textSize="20sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.85"
                    app:layout_constraintStart_toEndOf="@+id/button" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>